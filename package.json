    "knex": "2.4.0",
    "koa": "2.13.4",
    "koa-router": "11.0.1",
    "koa2-swagger-ui": "^5.8.0",
    "multistream": "4.1.0",
    "p-limit": "^3.1.0",
    "pg": "^8.8.0",
    "prom-client": "^14.1.0",
    "smartweave": "^0.4.49",
    "winston": "^3.8.2"
  },
  "resolutions": {
    "arweave": "1.11.6"
  }
}
